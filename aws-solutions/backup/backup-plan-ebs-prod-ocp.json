{
    "plans": {
        "EBS-PROD-OCP-Backup-Plan": {
            "regions": {
                "@@assign": [
                    "ca-central-1"
                ]
            },
            "rules": {
                "EBS-PROD-Daily-OCP-Backup-Rule": {
                    "schedule_expression": {
                        "@@assign": "cron(0 12 ? * * *)"
                    },
                    "start_backup_window_minutes": {
                        "@@assign": "60"
                    },
                    "lifecycle": {
                        "delete_after_days": {
                            "@@assign": "30"
                        }
                    },
                    "target_backup_vault_name": {
                        "@@assign": "BackupVault01"
                    },
                    "recovery_point_tags": {
                        "ised-backup-rule": {
                            "tag_key": {
                                "@@assign": "ised-backup-rule"
                            },
                            "tag_value": {
                                "@@assign": "ebs-prod-daily-ocp-backup-rule"
                            }
                        }
                    }
                },
                "EBS-PROD-Weekly-OCP-Backup-Rule": {
                    "schedule_expression": {
                        "@@assign": "cron(0 5 ? * 3 *)"
                    },
                    "start_backup_window_minutes": {
                        "@@assign": "60"
                    },
                    "lifecycle": {
                        "move_to_cold_storage_after_days": {
                            "@@assign": "7"
                        },
                        "delete_after_days": {
                            "@@assign": "2555"
                        }
                    },
                    "target_backup_vault_name": {
                        "@@assign": "BackupVault01"
                    },
                    "recovery_point_tags": {
                        "ised-backup-rule": {
                            "tag_key": {
                                "@@assign": "ised-backup-rule"
                            },
                            "tag_value": {
                                "@@assign": "ebs-prod-weekly-ocp-backup-rule"
                            }
                        }
                    }
                }
            },
            "selections": {
                "tags": {
                    "EBS-PROD-OCP-Backup-Resource": {
                        "iam_role_arn": {
                            "@@assign": "arn:aws:iam::$account:role/ised-backup-role"
                        },
                        "tag_key": {
                            "@@assign": "ised-backup"
                        },
                        "tag_value": {
                            "@@assign": [
                                "backup-prod-ebs-ocp"
                            ]
                        }
                    }
                }
            }
        }
    }
}